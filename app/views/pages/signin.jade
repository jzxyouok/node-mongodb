extends ../layout

block content
  .container
    .row
      .col-md-5.center-block
        form(method='POST',action="/user/signup")
          .modal-header 注册
          .modal-body
            .form-group
              label(for='signupName') 用户名
              input#signupName.form-control(name="user[name]",type="password")
            .form-group
              label(for='signupPassword') 密码
              input#signupPassword.form-control(name="user[password]",type="text")
          .modal-footer
            button.btn.btn-default(type="button",data-dismiss='modal') 关闭
            button.btn.btn-warning(type="submit") 提交

