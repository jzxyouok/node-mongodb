extends ../layout

block content
  .container
    .row
      .tablebox
        table.table.table-hover
          thead
            tr
              th 名字
              th 时间
              th 查看
              th 更新
              th 权限
              th 删除
          tbody
            each item in users
              tr(class="item-id-#{item._id}")
                td #{item.name}
                td #{moment(item.meta.updateAt).format('MM/DD/YYYY')}
                td: a(target="_blank",href="../user/#{item._id}") 查看
                td: a(target="_blank",href="../user/update/#{item._id}") 修改
                td #{item.role}
                td
                  button.btn.btn-danger.userdel(type="button",data-id="#{item._id}") 删除
  script(src="/js/admin.js")
