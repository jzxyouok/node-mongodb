extends ../layout

block content
  .container
    .row
      each item in movies
        .col-md-4.col-sm-5.col-xs-10
          .thumbnail.heightbox
            a(href="/movie/#{item._id}")
              img(src="#{item.poster}",alt="#{item.title}")
            .caption
              h3 #{item.title}
              p: a.btn.btn-warning(href="/movie/#{item._id}", role="button")  观看预告片



